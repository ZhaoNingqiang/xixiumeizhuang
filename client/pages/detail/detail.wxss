/* pages/goods/detail/detail.wxss */

page {
  display: flex;
  flex-direction: column;
  height: 100%;
}

swiper {
  height: 750rpx;
}

swiper-item image {
  width: 100%;
  height: 100%;
}

scroll-view {
  margin-bottom: 100rpx;
}

.detail-container {
  display: flex;
  flex-direction: column;
  padding: 16rpx;
}

.detail-container .title {
  font-size: 36rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.detail-container .price {
  font-size: 32rpx;
  color: red;
}

.detail-container .pass-price {
  margin-left: 12rpx;
  font-size: 28rpx;
  color: #888;
  text-decoration: line-through;
}

.detail-container .sold {
  float: right;
  font-size: 28rpx;
  color: #333;
}

.divide {
  width: 100%;
  background-color: #eee;
  height: 20rpx;
}

.introduce-container {
  padding: 20rpx;
  background-color: white;
  flex-direction: column;
}

.introduce-container .intro {
  width: 100%;
  height: auto;
  margin-top: 20rpx;
  margin-bottom: 30rpx;
}

.introduce-container .image {
  width: 100%;
  height: auto;
}

.detail-nav {
  display: flex;
  flex-direction: row;
  align-items: center;
  float: left;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  right: 0;
  z-index: 1;
  width: 100%;
  height: 100rpx;
}

.detail-nav .item {
  color: #333;
  display: flex;
  align-items: center;
  width: 240rpx;
  flex-direction: column;
  font-size: 24rpx;
}

.count {
  position: fixed;
  width: 32rpx;
  height: 32rpx;
  color: white;
  background-color: #f44336;
  line-height: 32rpx;
  text-align: center;
  font-size: 26rpx;
  border-radius: 50%;
}

.detail-nav image {
  width: 50rpx;
  height: 50rpx;
}

.detail-nav image-home {
  width: 80rpx;
  height: 80rpx;
  margin: 40rpx;
}

.button-orange {
  font-size: 32rpx;
  line-height: 100rpx;
  flex-direction: column;
  align-items: center;
  height: 100%;
  color: white;
  width: 50%;
  text-align: center;
  display: inline-block;
  background-color: #ef833e; /* 橙色 */
}

.button-red {
  font-size: 32rpx;
  line-height: 100rpx;
  flex-direction: column;
  align-items: center;
  height: 100%;
  color: white;
  width: 50%;
  text-align: center;
  display: inline-block;
  background-color: #f44336; /* 红色 */
}


.dialog_mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 10;
  background: rgba(0, 0, 0, 0.7);
  display: none;
}

.dialog_container {
  position: fixed;
  bottom: 0;
  width: 100%;
  background: white;
  transform: translateY(150%);
  transition: all 0.4s ease;
  z-index: 11;
}

.dialog-show .dialog_container {
  transform: translateY(0);
}

.dialog-show .dialog_mask {
  display: block;
}

.sku-image {
  border: 1px solid #ddd;
  width: 200rpx;
  height: 200rpx;
}

.image-close {
  width: 32rpx;
  height: 32rpx;
  position: fixed;
  right: 20rpx;
  top: 20rpx;
}

.sku_info_container {
  margin: 20rpx 40rpx 10rpx 20rpx;
  display: flex;
  flex-direction: row;
}

.column {
  display: flex;
  flex-direction: column;
}

.sku_count_container {
  margin: 0rpx 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.sku-title {
  color: #333;
  position: relative;
  left: 20rpx;
  font-size: 32rpx;
}

.sku-price {
  color: red;
  position: relative;
  margin-top: 16rpx;
  left: 20rpx;
  font-size: 40rpx;
}

.sku-count {
  font-size: 34rpx;
  color: #333;
}

.sku-stock {
  position: absolute;
  right: 20rpx;
  font-size: 34rpx;
  color: #333;
}

.add-car {
  line-height: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100rpx;
  background: #ef833e;
  color: white;
  width: 100%;
  text-align: center;
}

.buy-now {
  line-height: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100rpx;
  background: #f44336;
  color: white;
  width: 100%;
  text-align: center;
}

