.cart {
  width: 100%;
  height: 260rpx;
  background: #999;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
}

.select {
  width: 60rpx;
  height: 60rpx;
}

.poster {
  background: red;
  width: 160rpx;
  height: 160rpx;
}

.sku_edit_container {
  width: 0rpx;
  flex-grow: 1;
  height: 100%;
  background: #ccc;
}

.sku_title_container {
  height: 100%;
  background: #0ff;
  display: flex;
  flex-direction: row;
}

.column {
  position: absolute;
  right: 30rpx;
  display: flex;
  flex-direction: column;
}

.title {
  justify-content: flex-start;
  align-self: flex-start;
}

.suv_edit_container {
  visibility: visible;
  top: 0rpx;
  height: 260rpx;
  z-index: 2;
  position: absolute;
  display: flex;
  flex-direction: row;
  background: #ff0;
  width: 100%;
}
