/* pages/car/car.wxss */

.header {
  width: 100%;
  height: 80rpx;
  align-items: center;
  display: inline-block;
  
  line-height: 80rpx;
  font-size: 28rpx;
  color: #5a5a5a;
}

.text {
  float: right;
}

.des_container {
  flex-grow: 1;
   background: red;
  display: flex;
  flex-direction: row;
}

.suv-edit {
  text-align: center;
  align-items: center;
  display: flex;
  flex-direction: row;
  position: absolute;
}

.cart_container {
  width: 100%;
  height: auto;
  border-top: 1px solid #eee;
  display: flex;
  flex-direction: row;
}

.scroll {
  margin-bottom: 100rpx;
}

.column {
  text-align: right;
  
  
  display: flex;
  flex-direction: column;
}

.row {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.sku-price {
  color: red;
  font-size: 32rpx;
}

.sku-count {
  color: #333;
  font-size: 32rpx;
}

.price {
  color: red;
  position: relative;
}

.title {
  width: 44%;
  height: 100%;
  font-size: 28rpx;
  margin-top: 30rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.small_text {
  font-size: 28rpx;
  margin-right: 40rpx;
  margin-left: 10rpx;
}

.item-select {
  width: 40rpx;
  height: 40rpx;
  margin-top: 90rpx;
  margin-left: 30rpx;
}

.item-allselect {
  width: 40rpx;
  height: 40rpx;
  margin-left: 20rpx;
}

.item-image {
  width: 160rpx;
  height: 160rpx;
  margin: 30rpx;
}

.bottom_total {
  border-top: 1px solid #eee;
  position: fixed;
  display: flex;
  flex-direction: column;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  background: white;
}

.button-red {
  background-color: #f44336; /* 红色 */
}

button {
  position: fixed;
  right: 0;
  color: white;
  text-align: center;
  display: inline-block;
  font-size: 30rpx;
  border-radius: 0rpx;
  width: 30%;
  height: 100rpx;
  line-height: 100rpx;
}
