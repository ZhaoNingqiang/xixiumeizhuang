.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

.product-list{

	flex:1;
	flex-direction:column;
}
.product-item {
  width: 20%;
  display: flex;
  flex-direction: row;
}

.product-poster {
  flex: 1;
  display: flex;
  padding: 10rpx 20rpx ;
  border-bottom: 2rpx solid #eee;
}
