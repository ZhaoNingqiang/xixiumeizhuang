/**app.wxss**/

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

.product-list {
}

.product-item {
  padding-bottom: 10rpx;
  flex-direction: column;
  margin-bottom: 1%;
  display: inline-block;
  width: 48%;
}

.odd {
  margin-left: 1.5%;
  margin-right: 0.5%;
}

.even {
  margin-left: 0.5%;
  margin-right: 1.5%;
}

.product-poster {
  background-color: #eee;
  width: 100%;
  height: 350rpx;
}

.product-des {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 28rpx;
  color: #333;
}

.product-price {
  color: red;
  font-size: 28rpx;
}
